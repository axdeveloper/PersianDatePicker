<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/month_navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/calendar_navigation_top_padding"
    android:paddingBottom="@dimen/calendar_navigation_bottom_padding">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/month_navigation_previous"
        android:layout_width="@dimen/min_touch_target_size"
        android:layout_height="@dimen/calendar_navigation_height"
        android:src="@drawable/ic_arrow_left"
        style="?attr/navigationButtonStyle"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/month_navigation_next"
        android:layout_width="@dimen/min_touch_target_size"
        android:layout_height="@dimen/calendar_navigation_height"
        android:src="@drawable/ic_arrow_right"
        style="?attr/navigationButtonStyle"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/navigationToggleStyle"
            android:id="@+id/month_navigation_fragment_toggle"
            android:paddingEnd="@dimen/calendar_content_padding"
            android:paddingRight="@dimen/calendar_content_padding"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/calendar_navigation_height"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:layout_gravity="right|center_vertical"
            app:drawableLeftCompat="@drawable/ic_menu_arrow_down"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </FrameLayout>
</LinearLayout>
