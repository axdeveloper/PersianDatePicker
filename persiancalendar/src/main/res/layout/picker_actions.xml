<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/date_picker_actions"
    android:layout_width="match_parent"
    android:layout_height="@dimen/calendar_action_height"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingStart="@dimen/calendar_action_padding"
    android:paddingLeft="@dimen/calendar_action_padding"
    android:paddingBottom="@dimen/calendar_action_padding"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <androidx.appcompat.widget.AppCompatButton
        style="?attr/positiveButtonStyle"
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/confirm" />

    <androidx.appcompat.widget.AppCompatButton
        style="?attr/cancelButtonStyle"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/cancel" />

</LinearLayout>
